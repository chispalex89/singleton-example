@model IEnumerable<Singleton_Example.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="alert alert-primary" role="alert">
    @ViewBag.MensajeAMostrarEnLaVista
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Code, filte = item.Name, cualquiercosa = item.Code }) |
            @Html.ActionLink("Details", "Details", new { id = item.Code }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Code })
        </td>
    </tr>
}

</table>
